<div class="video-box">
  <%= video_tag "/assets/videos/video2.mp4", autoplay: true, loop: true, muted: true, style: "width:100%;"%>
  <div class="video-box-back">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <h2>MUSCLE LOG IN</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group has-icon">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail", placeholder:"メールアドレス"  %>
          </div>

          <div class="form-group has-icon">
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputEmail", placeholder:"パスワード" %>
          </div>

          <% if devise_mapping.rememberable? %>
          <div class="form-group has-icon">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end %>

          <div class="form-group has-icon">
            <%= f.submit "サインイン" ,class:"label-warning"%>
          </div>
          <% end %>

        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

