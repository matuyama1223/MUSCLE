<div class="container">
  <div class="row">

<h1>フォロワー</h1>
<% @user.followers.each do |user| %>
<%=link_to user_path(user.id)do%>
<%=attachment_image_tag user, :user_image,:fill, 200,200,fallback: "no_image.jpg", size:'200x200'%>
<%end%>
<%= user.name%>
<p>フォロー<%=link_to user.relationships.count, follows_list_path(user)%></p>
<p>フォロワー<%= link_to user.reverse_of_relationships.count, followers_list_path(user)%><p>
<p>投稿回数<%=user.muscles.count%></p>
<%= render 'relationships/follow_button',user: user %>
<% end %>
</div>
</div>

