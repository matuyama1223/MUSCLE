<div class="container">
<div class="row">
<div class="col-md-4 col-md-offset-4">


    <% if @user.errors.any? %>
    <p><%= @user.errors.count %>errors prohibited this obj from being saved:</p>
    <% @user.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>

<h1>筋肉ユーザー変更</h1>
    <%= form_for(@user) do |f| %>

      <h1><%= f.label :MUSCLE名前%></h1>
      <h4><%= f.text_field :name ,placeholder:"MUSCLE名前"%></h4>

  	  <h1><%= f.label :メールアドレス %></h1>
      <th><%= f.email_field :email ,placeholder:"メールアドレス"%></th>

      <h1>MUSCLE 画像</h1>
     <h4><%= f.attachment_field :user_image %></h4>
     <h4><%= f.submit "保存" ,class:"btn-warning"%></h4>
      <%= attachment_image_tag @user, :user_image,:fill, 300,300, fallback: "no_image.jpg"%>
     <h4><%= link_to '退会', user_path(current_user), method: :delete ,data: { confirm: '本当に消しますか？' },class:"btn btn-danger"%> </h4>

 <% end %>
 </div>
