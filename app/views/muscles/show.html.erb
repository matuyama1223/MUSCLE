
<div class="container">
<div class="row">
	<h1>詳細投稿</h1>
	<%=link_to user_path(@muscle.user.id)do %>
	<%= attachment_image_tag @muscle,:image,:fill, 600,500, fallback: "no_image.jpg" %>
	<% end %>
	<%=@muscle.title%>
	<%=@muscle.body%>
	<% if current_user.id == @muscle.user_id %>
	<%=link_to"消す",muscle_path(@muscle.id), method: :delete, data: { confirm: '本当に消しますか？' },class:"btn btn-danger" %>
	<%=link_to'編集' ,edit_muscle_path(@muscle.id),class:"btn btn-primary"%>
	<% end %>
	<%=@muscle.user.name%>

	<%= form_for [@muscle, @muscle_comments] do |f| %>
	<%= f.text_field :comment, rows:'5' , class: "form-control",placeholder: "コメントをここに"%>
	<%=f.submit%>
	<% end %>

	<% @muscle.muscle_comments.each do |muscle_comment| %>
	<%= muscle_comment.user.name%>
	<%= muscle_comment.created_at.strftime('%Y/%m/%d') %>
	<%= muscle_comment.comment %>
	<%=link_to '消す',muscle_muscle_comment_path(@muscle.id,muscle_comment.id),method: :delete %>
	<%= attachment_image_tag muscle_comment.user, :user_image, :fill, 80, 80, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
	<%end%>
</div>
</div>



